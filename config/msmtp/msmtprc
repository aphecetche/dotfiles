# set defaults for all accounts

defaults
auth on
tls on
logfile ~/.msmtp.log
syslog on

account icloud
host smtp.mail.me.com
port 587
protocol smtp
from laurent.aphecetche@me.com
user laurent.aphecetche@me.com
passwordeval "security find-generic-password -s mbsync-icloud-password -w"
tls_trust_file ~/.certificates/cacert.pem

account gmail
host smtp.gmail.com
port 587
protocol smtp
from laurent.aphecetche@gmail.com
user laurent.aphecetche@gmail.com
passwordeval "security find-generic-password -s mbsync-gmail-password -w"
tls_trust_file ~/.certificates/cacert.pem

account subatech
host mailrelay-subatech.in2p3.fr
port 587
protocol smtp
from laurent.aphecetche@subatech.in2p3.fr
user aphecete
passwordeval "security find-generic-password -s mbsync-subatech-password -w"
tls_certcheck off

account cern
host smtp.cern.ch
port 587
protocol smtp
from laurent.aphecetche@cern.ch
user laphecet
passwordeval "security find-generic-password -s mbsync-cern-password -w"
tls_trust_file ~/.certificates/cacert.pem
logfile ~/.msmtp.cern.log
syslog on
