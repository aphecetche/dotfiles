source ~/.vimrc

" below the ideavim specific things
"

set surround

map <C-H> <C-W>h 
map <C-K> <C-W>k 
map <C-L> <C-W>l 
map <C-J> <C-W>j 

" CTRL-P is fuzzy find shortcup in vim
" make it go to file in CLion

map <C-P> :action GotoFile<CR>

nnoremap <leader>c :action CommentByLineComment<CR>

nnoremap <leader>b :action Build<CR>
nnoremap <leader>r :action Run<CR>

nnoremap <leader>f :action ClangFormat.ClangFormat<CR>
